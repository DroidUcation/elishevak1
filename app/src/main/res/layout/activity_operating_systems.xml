<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/os_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.preferences.OperatingSystemsActivity">

    <ImageView
        android:id="@+id/osImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/osTextView"
        android:layout_alignEnd="@+id/osTextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:contextClickable="false"
        android:cropToPadding="false"
        android:src="@drawable/os_150x150" />

    <TextView
        android:id="@+id/osTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="@string/os_question"
        android:textAlignment="center"
        android:textColor="@color/question_text_color"
        android:textSize="@dimen/question_text_size" />

    <TextView
        android:id="@+id/android_textView"
        style="@style/os_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/osTextView"
        android:layout_marginStart="24dp"
        android:layout_marginTop="42dp"
        android:onClick="toggleOS"
        android:text="@string/fa_icon_android" />

    <TextView
        android:id="@+id/iOS_textView"
        style="@style/os_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/android_textView"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/android_textView"
        android:onClick="toggleOS"
        android:text="@string/fa_icon_iOS" />

    <TextView
        android:id="@+id/windows_textView"
        style="@style/os_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/android_textView"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/iOS_textView"
        android:onClick="toggleOS"
        android:text="@string/fa_icon_windows" />

    <Button
        android:id="@+id/done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/action_button_background"
        android:text="@string/done"
        android:textColor="@color/action_button_text_color"
        android:onClick="backToPreferences"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/iOS_textView" />

</RelativeLayout>
