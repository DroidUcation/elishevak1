<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ResultsActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_preferences"
        android:id="@+id/change_prefs_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:background="@color/action_button_background"
        android:textColor="@color/action_button_text_color"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/results_textView"
        android:text="@string/results_text"
        android:textColor="@color/results_text_color"
        android:textSize="@dimen/question_text_size"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/change_prefs_btn" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/results_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/countries_background"
        android:layout_below="@+id/results_textView"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
