<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.preferences.targetAudience.TargetAudiencesActivity"
    android:background="@color/app_background"
    android:orientation="vertical">>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapImageView"
        android:src="@drawable/map_150x150"
        android:background="@android:color/transparent"
        android:cropToPadding="false"
        android:contextClickable="false"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="221dp"
        android:layout_height="104dp"
        android:text="@string/target_audience_question"
        android:id="@+id/textView"
        style="@style/question"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="134dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_audience_button"
        android:id="@+id/button"
        android:width="50dp"
        android:textColor="@color/select_country_button_text_color"
        android:background="@color/select_country_button_background"
        android:onClick="selectCountry"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />
</RelativeLayout>
