<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.perfecto.optimizer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/optimizer_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.preferences.customizedPreferences.CustomizedPreferencesActivity" />
        <activity android:name=".activities.preferences.DeviceTypesActivity" />
        <activity android:name=".activities.preferences.OperatingSystemsActivity" />
        <activity android:name=".activities.preferences.targetAudience.TargetAudiencesActivity" />
        <activity android:name=".activities.preferences.targetAudience.GeographiesActivity" />
        <activity android:name=".activities.preferences.customizedPreferences.CustomersDevicesActivity" />
        <activity android:name=".activities.ResultsActivity" />
        <activity android:name=".activities.PreferencesActivity" />
        <activity android:name=".activities.preferences.BaseFilterActivity"></activity>
    </application>

</manifest>